{
    "name": "maer/enstart-skeleton",
    "description": "Skeleton app for maer/enstart framework",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Magnus Eriksson",
            "email": "mange@reloop.se"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "maer/enstart": "^0.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.8",
        "phpunit/phpunit": "^6.2.1"
    },
    "scripts": {
        "test": [
            "@cs",
            "@phpunit"
        ],
        "cs": "./vendor/bin/phpcs --standard=PSR2 --extensions=php --ignore=vendor/,logs/ -n -s ./",
        "phpunit": "./vendor/bin/phpunit --strict-coverage --colors=always"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    }
}
